# Azure App Service Deployment Configuration

# This file tells Azure that this is a Python application
# Place this in the root of your repository

# Application Entry Point
FLASK_APP=app.py

# Environment
FLASK_ENV=production

# Python version (matches runtime.txt)
PYTHON_VERSION=3.11

# Build command
BUILD_COMMAND="pip install -r requirements.txt"

# Start command  
START_COMMAND="gunicorn --bind 0.0.0.0:$PORT app:app"
